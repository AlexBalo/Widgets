<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/two_unit_dp"
        android:layout_marginBottom="@dimen/two_unit_dp"
        android:text="@string/tap_to_roll"
        android:textSize="@dimen/four_unit_sp" />

    <com.example.widgets.counter.CounterView
        android:id="@+id/counter"
        android:layout_width="match_parent"
        android:layout_height="@dimen/counter_height"
        android:background="@color/backgroundInverse"
        android:scrollbars="none" />

    <Button
        android:id="@+id/reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/two_unit_dp"
        android:text="@string/btn_reset" />

</LinearLayout>